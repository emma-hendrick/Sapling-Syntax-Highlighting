{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sapling",
	"scopeName": "source.sl",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#storage"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		
		"comments": {
			"patterns": [
				{
					"name": "comment.block.documentation",
					"begin": "###\\_",
					"end": "\\_###"
				},
				{
					"name": "comment.block",
					"begin": "#\\_",
					"end": "\\_#"
				},
				{
					"name": "comment.line.number-sign",
					"match": "#.*$"
				}
			]
		},

		"constants": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\d+(\\.\\d+)?"
				},
				{
					"name": "constant.character",
					"match": "'[^']'"
				},
				{
					"name": "constant.language",
					"match": "\\b(True|False)\\b"
				}
			]
		},

		"strings": {
			"name": "string.quoted.double.sling",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sling",
					"match": "\\\\."
				}
			]
		},

		"storage": {
			"patterns": [{
				"name": "storage.type",
				"match": "\\b(int|float|str|char|bool|void)\\b"
			}]
		},

		"keywords": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "\\b(if|else|for|while|return|switch|case|break|continue)\\b"
				},
				{
					"name": "keyword.operator",
					"match": "(==|>|<|>=|<=|!=|=|\\+|\\-|\\*|/|&&|\\|\\||\\^)"
				}
			]
		},

		"punctuation": {
			"patterns": [{
				"name": "punctuation.delimiter",
				"match": "(\\(|\\)|\\{|\\}|\\;|\\?|\\:)"
			}]
		},

		"variables": {
			"patterns": [{
				"name": "variable.name",
				"match": "\\b[A-Za-z_]\\w*\\b"
			}]
		}
	}
}