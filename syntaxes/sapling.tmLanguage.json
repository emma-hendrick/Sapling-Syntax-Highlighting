{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Sapling",
	"scopeName": "source.sl",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#types"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.sapling",
				"match": "\\b(if|while|for|return)\\b"
			},
			{
				"name": "keyword.other.sapling",
				"match": "\\b(ns|using)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b(func|void|error)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.sapling",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.sapling",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.sapling",
					"match": "\\//.*$"
				},
				{
					"name": "comment.block.sapling",
					"begin": "\\/[*]",
					"end": "[*]/"
				}
			]
		}
	}
}